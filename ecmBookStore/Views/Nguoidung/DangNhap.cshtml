
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    var ThongBao = ViewBag.ThongBao;
}

<table align="center">
    <h2 style="text-align:center; color:red">@ThongBao</h2>
    @if (ViewBag.ThongBao == "Chúc mừng đăng nhập thành công")
    {
        <script type="text/javascript">setTimeout(function () {
            window.location.href = '/BookStore';
        }, 1000);</script>
    }
    <h2 style="text-align:center">ĐĂNG NHẬP THÀNH VIÊN</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Tên đăng nhập:</td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu:</td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" value="Đăng Nhập" />
            </td>
        </tr>
    }
</table>


